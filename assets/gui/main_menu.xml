<?xml version="1.0" encoding="utf-8"?>
<Scene>
	<!-- Resources are loaded before creating and placing the widgets. You can use Resources with the id, which can be set with the id attribute -->
	<Resources>
		<Font
			id="defaultFont"
			src="assets/fonts/UbuntuMono-R.ttf"
		/>
	</Resources>
    <Widgets>
			<VerticalLayoutWidget
				id="vertWidget_vl1"
				autoDetermineWidth="true"
				autoDetermineHeight="true"
				backgroundColor="transparent"
				orientation="center" >

				<TextButtonWidget
					id="textButtonWidget_startGame"
					width="300"
					height="60"
					orientation="centerHorizontal"
					text="Start Game"
					font="defaultFont" />

				<Widget
					width="300"
					height="20"
					backgroundColor="transparent"	/>

				<TextButtonWidget
					id="textButtonWidget_settings"
					width="300"
					height="60"
					orientation="centerHorizontal"
					text="Settings"
					font="defaultFont" />

			</VerticalLayoutWidget>
	</Widgets>
</Scene>
